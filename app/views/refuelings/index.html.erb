<div class="container">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Refuelings</h1>
    <%= link_to 'New Refueling', new_refueling_path, class: 'btn btn-outline-primary' %>
  </div>

  <table class="table table-striped">
    <thead class="thead-dark">
      <tr>
        <th>User</th>
        <th>Gas Station</th>
        <th>Product</th>
        <th>Quantity (liters)</th>
        <th>Total Price</th>
        <th>Discount Applied</th>
        <th>Date</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @refuelings.each do |refueling| %>
        <tr>
          <td><%= refueling.user.name %></td>
          <td><%= refueling.gas_station.name %></td>
          <td><%= refueling.product.name %></td>
          <td><%= refueling.liters %></td>
          <td><%= number_to_currency(refueling.total_price) %></td>
          <td><%= number_to_currency(refueling.discount_applied) %></td>
          <td><%= l(refueling.created_at, format: :short) %></td>

          <td>
            <%= link_to 'Show', refueling, class: 'btn btn-info btn-sm' %>
            <%= link_to 'Edit', edit_refueling_path(refueling), class: 'btn btn-warning btn-sm' %>
            <%= button_to 'Destroy', refueling,
              method: :delete,
              form: {
                class: 'd-inline',
                data: { turbo_confirm: 'Are you sure?' }
              },
              class: 'btn btn-danger btn-sm' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="d-flex justify-content-center mt-4">
    <%= paginate @refuelings %>
  </div>
</div>
